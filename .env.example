# ==============================================
# Grand Bahama Ferry Platform - Environment Config
# ==============================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://gbferry:gbferry_dev@localhost:5433/gbferry_db?schema=public"

# Keycloak (Identity Provider)
KEYCLOAK_URL="http://localhost:8080"
KEYCLOAK_REALM="gbferry"
KEYCLOAK_CLIENT_ID="gbferry-web"
KEYCLOAK_CLIENT_SECRET="dev-web-secret-change-in-production"
KEYCLOAK_API_CLIENT_ID="gbferry-api"
KEYCLOAK_API_CLIENT_SECRET="dev-api-secret-change-in-production"

# NextAuth (Frontend Auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-secret-with-openssl-rand-base64-32"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
API_PORT=3001
API_PREFIX="/api/v1"

# Redis (Caching & Sessions)
REDIS_URL="redis://localhost:6379"

# MinIO (S3-compatible Document Storage for dev)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="gbferry"
MINIO_SECRET_KEY="gbferry_dev_s3"
MINIO_BUCKET="gbferry-documents"

# AWS S3 (Document Storage - Production)
AWS_REGION="us-east-1"
AWS_S3_BUCKET="gbferry-documents"
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should be set via AWS credentials file

# Encryption (for field-level passport encryption - 32 bytes hex)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Environment
NODE_ENV="development"
